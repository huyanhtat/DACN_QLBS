@model QuanLySach.Models.ChiTietSach
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<!-- Banner -->
@Html.Action("Banner", "Layout")
<section class="py-5">
    <div class="container author">
        <div class="row gy-4 gy-md-0">
            <div class="col-md-6 text-center text-md-start d-flex d-sm-flex d-md-flex justify-content-center align-items-center justify-content-md-start align-items-md-center justify-content-xl-center">
                <div style="max-width: 350px; width: 500px;">

                    <h2 class="text-capitalize fw-bold"
                        style="
                                        font-family: Helvetica Neue;
                                        width: 351px;
                                        /*height: 139.562px;*/
                                        margin: -5px;
                                        padding: -7px;
                                        text-align: left;
                                        font-size: 50px;
                                    ">
                        <p style="color: var(--ast-global-color-2); background-color: rgb(242, 245, 247)">@Model.tenSach</p>
                    </h2>
                    <p class="my-3" style="font-family: Eb Garamond; text-align: justify">
                        @Model.moTa.Substring(0, Model.moTa.Length/3) ...
                    </p>
                    <a class="btn btn-primary btn-lg border-dark me-2"
                       role="button"
                       href="@Url.Action("ThemGioHang", "GioHang", new { @ms = Model.Id })"
                       style="font-family: Heebo; color: rgb(255, 250, 250); background: rgb(0, 0, 0)">Mua Ngay</a><a class="btn btn-outline-primary btn-lg border-dark"
                                                                                                                      role="button"
                                                                                                                      href="@Url.Action("XemChiTiet", "Sach", new { @ms = Model.Id })"
                                                                                                                      style="font-family: Heebo; color: rgb(31, 32, 34)">Chi Tiết</a>
                </div>
            </div>
            <div class="col-md-6" data-aos="fade" data-aos-delay="50">
                <div class="p-xl-5 m-xl-5">
                    <img class="rounded img-fluid w-100 fit-cover"
                         style="min-height: 300px"
                         src="@Url.Action("GetImage", "Sach", new { id = Model.Id })"
                         loading="lazy" />
                </div>
            </div>
        </div>
    </div>
    <div class="container author">
        <div class="row gy-4 gy-md-0">
            <div class="col-md-6">
                <div class="p-xl-5 m-xl-5">
                    <img class="rounded img-fluid w-100 fit-cover"
                         style="min-height: 300px"
                         src="@Url.Action("GetImageAuthor", "Sach", new { id = Model.Id })"
                         loading="lazy" />
                </div>
            </div>
            <div class="col-md-6 d-md-flex align-items-md-center" style="font-family: EB Gamunt">
                <div style="max-width: 350px">
                    <h2 class="text-uppercase fw-bold">@Model.tenTacGia</h2>
                    <p class="my-3" style="width: 447px; font-family: heebo; text-align: justify; font-size: 16px">
                        <br />@Model.bio<br />
                    </p>
                    @*<a class="btn btn-primary btn-lg border-dark me-2"
                        role="button"
                        href="#"
                        style="color: rgb(27, 23, 23); background: rgba(55, 99, 244, 0)">Đọc Thêm</a>*@
                </div>
            </div>
        </div>
    </div>
    <section></section>
    <div class="row" style="margin: 0px; margin-left: 65px; margin-right: 65px; margin-top: 0px">
        <div class="col-md-4" style="text-align: left">
            <h1 style="font-size: 27px; font-weight: bold; font-family: EB Gamunt">Giải thưởng Guiness</h1>
            <p style="font-family: heebo; font-size: 16px;">Tác giả có số lượng sách bán chạy nhất của Brazil (1991)</p>
        </div>
        <div class="col-md-4" style="text-align: center">
            <h1 style="font-size: 27px; font-weight: bold; font-family: EB Gamunt">Giải thưởng Quốc Gia&nbsp;</h1>
            <p style="font-family: heebo; font-size: 16px; ">Quốc gia văn học Italia (2001)</p>
        </div>
        <div class="col-md-4" style="text-align: right">
            <h1 style="font-weight: bold; font-size: 28px; font-family: EB Gamunt">Giải Thưởng Áo</h1>
            <p style="font-family: heebo; font-size: 16px;">Cross of Honour for Science Art (2014)</p>
        </div>
    </div>
</section>

<!--Danh mục sản phẩm-->
<div class="container-list">
    <div class="container">
        @Html.Action("FeaturedBook", "Sach")
        <section></section>
        @Html.Action("NewBook", "Sach")
        <section></section>
        @Html.Action("Category", "layout")
    </div>
</div>


