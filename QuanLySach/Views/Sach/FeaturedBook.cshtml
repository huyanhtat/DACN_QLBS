@model IEnumerable<QuanLySach.Models.book>

<div class="mb-5" style="margin-top: 40px">
    <h1 style="font-family: EB; margin: 3px; padding: 8px; height: 80px; margin-top: 25px; margin-right: 0px; margin-bottom: 6px">
        SÁCH NỔI BẬT
    </h1>
    <div  style="margin-top: 0px; margin-bottom: 40px; display: flex; justify-content: space-between;">
        @foreach (var product in Model)
        {
        <a href="@Url.Action("XemChiTiet", "Sach", new { ms = product.id })">
            <div class="col-md-3 text-start text-dark product-container" style="display: inline-block; width: 300px; height: 470px">
                <img class="rounded img-fluid product-image" src="@Url.Action("GetImage", "Sach", new { id = product.id })" width="330px" height="auto" style="box-shadow: 0px 0px 5px 1px;" />


                <br />
                <span class="title-product" style="color: var(--ast-global-color-2); font-size: 20px; font-family:'Times New Roman', Times, serif">@product.name</span><br />

                <span class="price">
                    <span class="price-amount"><b>@string.Format("{0:N0}", product.price) VNĐ</b></span>
                </span>
                <img src="https://waka.vn/svgs/icon-member.svg" alt="icon-sale" style=" position: absolute; top:0px; right: 5px; margin-top: 6px;">

                @*@if (product.quantity != 0)
