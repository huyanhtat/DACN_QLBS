@model IEnumerable<QuanLySach.Models.ChiTietSach>


<div style="margin-top: 0px; margin-bottom: 40px; display: flex; justify-content: space-between;">
    @foreach (var product in Model)
    {
        <a href="@Url.Action("XemChiTiet", "Sach", new { ms = product.Id})">
            <div class="col-md-3 text-start text-dark product-container" style="display: inline-block; width: 300px; height: 470px">
                <img class="rounded img-fluid" src="@Url.Action("GetImage", "Sach", new { id = product.Id })" width="300px" height="auto" style="box-shadow: 0px 0px 5px 1px;" />

                <a class="product-category-link" href="@Url.Action("XemChiTiet", "Sach", new { ms = product.Id})">
                    <br />
                    <span class="title-product" style="color: var(--ast-global-color-2)">@product.tenSach</span><br />
                </a>
                <span class="price">
                    <span class="price-amount"><b>@string.Format("{0:N0}", product.gia) VNĐ</b></span>
                </span>
                <img src="https://waka.vn/svgs/icon-member.svg" alt="icon-sale" style=" position: absolute; top:0px; right: 5px; margin-top: 6px;">
                @if (product.soLuong != 0)
                {
                    <a class="btn btn-primary text-center link-dark border-dark"
                       role="button"
                       href="@Url.Action("ThemGioHang", "GioHang", new { @ms = product.Id })"
                       style=" width: 130px; /*height: 35px;*/ font-size: 13px; color: rgb(255, 255, 255); background: rgb(0, 0, 0); text-align: center; margin-top: 5px; margin-right: 0; margin-bottom: 5px; font-family: Heebo; ">Mua Ngay</a>
                }
                <a class="btn btn-primary text-center link-dark border-dark"
                   role="button"
                   href="@Url.Action("XemChiTiet", "Sach", new { ms = product.Id })"
                   style=" width: 130px; /*height: 35px;*/ font-size: 13px; color: rgb(1, 1, 1); background: rgba(248, 250, 255, 0); text-align: center; margin-top: 5px; margin-right: 0; margin-bottom: 5px; margin-left: 11px; font-family: Heebo; ">Chi Tiết</a>

            </div>
            </a>
            }
    </div>